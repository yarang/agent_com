{
  "version": "1.0.0",
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "ssl": {
      "enabled": false,
      "cert_path": "./certificates/cert.pem",
      "key_path": "./certificates/key.pem"
    },
    "cors": {
      "origins": [
        "https://oci-ajou-ec2.fcoinfup.com",
        "http://oci-ajou-ec2.fcoinfup.com",
        "http://oci-ajou-ec2.fcoinfup.com:8000",
        "https://oci-ajou-ec2.fcoinfup.com:8000",
        "http://localhost:3000",
        "https://localhost:3000"
      ],
      "allow_credentials": true
    }
  },
  "database": {
    "url": "postgresql+asyncpg://agent:agent_password@localhost:5432/agent_comm",
    "pool_size": 10,
    "max_overflow": 20
  },
  "authentication": {
    "jwt": {
      "secret_key": "CHANGE_ME_IN_PRODUCTION_USE_32_CHAR_MIN",
      "algorithm": "HS256",
      "access_token_expire_minutes": 15,
      "refresh_token_expire_days": 7
    },
    "api_token": {
      "prefix": "agent_",
      "secret": "CHANGE_ME_IN_PRODUCTION_USE_32_CHAR_MIN"
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60
    },
    "headers": {
      "enabled": true
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json"
  },
  "agent": {
    "nickname": "OCI-Agent",
    "project_id": "agent-comm-oci",
    "capabilities": []
  },
  "communication_server": {
    "url": "http://oci-ajou-ec2.fcoinfup.com:8000",
    "timeout": 30
  }
}
