# Environment Variables for AI Agent Communication System
# Copy this file to .env and update with your values

# ============================================================================
# JWT Configuration (Dashboard Authentication)
# ============================================================================
# Generate a secure key with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# API Token Configuration (Agent Authentication)
# ============================================================================
# Generate a secure key with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
API_TOKEN_SECRET=your-api-token-secret-for-signing
API_TOKEN_PREFIX=agent_

# ============================================================================
# Admin Credentials (First Setup)
# ============================================================================
# IMPORTANT: Change these immediately after first login!
ADMIN_USERNAME=admin
# Minimum 12 characters, recommended: Use a password manager
ADMIN_PASSWORD=change-me-immediately-to-secure-password

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost/agent_comm

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8001
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,https://localhost:8000,https://localhost:3000

# ============================================================================
# SSL/TLS Configuration
# ============================================================================
# Enable HTTPS/SSL for secure connections
SSL_ENABLED=false

# Paths to SSL certificate files (generate with: ./scripts/generate-certificates.sh)
# For development, use self-signed certificates
SSL_CERT_PATH=./certificates/cert.pem
SSL_KEY_PATH=./certificates/key.pem

# Ports for HTTP and HTTPS
# HTTP_PORT: Port for HTTP connections (will redirect to HTTPS if SSL_ENABLED=true)
# SSL_PORT: Port for HTTPS connections
HTTP_PORT=8001
SSL_PORT=8443

# Docker Compose port mappings
COMMUNICATION_SERVER_PORT=8001
COMMUNICATION_SERVER_SSL_PORT=8443
MCP_BROKER_PORT=8000

# ============================================================================
# CORS Configuration (for Remote Access)
# ============================================================================
# Comma-separated list of allowed origins for cross-origin requests
# Include both HTTP and HTTPS versions for development
# For production, specify exact domains:
#   CORS_ORIGINS=https://dashboard.example.com,https://app.example.com
# For local development with various ports:
#   CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://localhost:3000,https://localhost:8000
# For remote access, add your remote domains:
#   CORS_ORIGINS=http://localhost:3000,https://dashboard.yourdomain.com
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,https://localhost:8000,https://localhost:3000

# Allow credentials (cookies, authorization headers) in CORS requests
ALLOW_CREDENTIALS=true

# ============================================================================
# Security (Optional)
# ============================================================================
# Enable HTTPS-only cookies in production
# SECURE_COOKIES=true

# Cookie domain for shared authentication across subdomains
# COOKIE_DOMAIN=.yourdomain.com

# ============================================================================
# Certificate Generation Options
# ============================================================================
# These variables are used by ./scripts/generate-certificates.sh
# Run the script to generate self-signed certificates for development

# Certificate directory
# CERT_DIR=./certificates

# Certificate validity period in days
# DAYS_VALID=365

# Domain name for certificate (default: localhost)
# DOMAIN=dashboard.example.com
