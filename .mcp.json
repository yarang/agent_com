{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/.mcp.schema.json",
  "mcpServers": {
    "agent-comm": {
      "$comment": "AI Agent Communication System MCP Broker - Claude Code 간 통신 지원",
      "command": "uv",
      "args": [
        "--directory",
        "/Users/yarang/works/agent_dev/agent_com",
        "run",
        "mcp-broker"
      ],
      "env": {
        "AGENT_TOKEN": "agent_default_front_x_KNiW6dVmKVySnYZwr785-AvXW4WkU6Fevxaln0HVSAQ",
        "AGENT_NICKNAME": "local-agent",
        "AGENT_PROJECT_ID": "default",
        "COMMUNICATION_SERVER_URL": "http://oci-ajou-ec2.fcoinfup.com:8000",
        "PYTHONUNBUFFERED": "1"
      }
    },
    "context7": {
      "$comment": "Using shell wrapper to load PATH (fixes npx bash function issue). Use .mcp.windows.json for Windows.",
      "command": "${SHELL:-/bin/bash}",
      "args": [
        "-l",
        "-c",
        "exec npx -y @upstash/context7-mcp@latest"
      ]
    },
    "sequential-thinking": {
      "command": "${SHELL:-/bin/bash}",
      "args": [
        "-l",
        "-c",
        "exec npx -y @modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "stitch": {
      "command": "${SHELL:-/bin/bash}",
      "args": [
        "-l",
        "-c",
        "exec npx -y stitch-mcp"
      ],
      "env": {
        "GOOGLE_CLOUD_PROJECT": "YOUR_PROJECT_ID"
      }
    }
  },
  "staggeredStartup": {
    "enabled": true,
    "delayMs": 500,
    "connectionTimeout": 15000
  }
}
